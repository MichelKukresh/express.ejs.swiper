<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Swiper Example</title>   
    <link rel="stylesheet" href="../views/swiper-bundle.min.css" />
    <!-- Подключение стилей Swiper -->
  </head>
  <body>
    <style>
      body {
        background-color: chocolate;
      }

      .swiper {
        width: 600px;
        height: 300px;
      }

      .custom-pagination {
        display: flex;
        justify-content: center;
        margin-bottom: 10px;
        position: absolute;
        top: 260px;
      }

      .pagination-label {
        display: none; /* Скрываем все по умолчанию */
        font-size: 16px; /* Размер шрифта */
        margin: 0 10px; /* Отступы между надписями */
      }

      .swiper-pagination {
        display: none; /* Скрываем стандартную пагинацию, если не нужна */
      }
    </style>

    <div class="swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">Slide 1</div>
        <div class="swiper-slide">Slide 2</div>
        <div class="swiper-slide">Slide 3</div>
      </div>
      <div class="custom-pagination">
        <span class="pagination-label">Слайд 1</span>
        <span class="pagination-label">Слайд 2</span>
        <span class="pagination-label">Слайд 3</span>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-scrollbar"></div>
    </div>

    <script src="../views/swiper-bundle.min.js"></script>
    <script src="../views/swiper-init.js"></script>
  </body>
</html>
